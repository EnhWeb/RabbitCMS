@model Jkzl.Activitys.ViewModels.PrizeViewModel

<form method="POST" class="form-horizontal">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title" data-widget="collapse" style="cursor: pointer">奖品 - @Model.Name</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" title="折叠"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Name)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.ImagePath)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.ImagePath)
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Probability)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Probability, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Probability)
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Total)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Total, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Total)
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Remain)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Remain, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Remain)
            </div>
        </div><!-- /.box-body -->
    </div>
</form>